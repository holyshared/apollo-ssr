{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "typeRoots": ["@types"],
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "../dist"
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "../node_modules"
  ]
}
